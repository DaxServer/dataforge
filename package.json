{
  "name": "dataforge",
  "version": "0.1.0",
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"bun --cwd backend dev\" \"bun --cwd frontend dev\"",
    "format": "prettier --write \"**/*.{ts,vue}\"",
    "lint": "bun -F '*' lint",
    "mcpi": "bunx @modelcontextprotocol/inspector",
    "test": "bun -F backend test",
    "typecheck": "bun -F '*' typecheck"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ],
  "type": "module",
  "workspaces": {
    "packages": [
      "frontend",
      "backend"
    ],
    "catalog": {
      "@elysiajs/eden": "1.3.2",
      "@eslint/eslintrc": "^3.3.1",
      "@eslint/js": "^9.28.0",
      "@types/bun": "^1.2.15",
      "@types/node": "^24.0.0",
      "@typescript-eslint/eslint-plugin": "^8.33.1",
      "@typescript-eslint/parser": "^8.33.1",
      "@vue/eslint-config-prettier": "^10.2.0",
      "@vue/eslint-config-typescript": "^14.5.0",
      "bun-types": "^1.2.18",
      "elysia": "1.3.5",
      "eslint": "^9.28.0",
      "eslint-config-prettier": "^10.1.5",
      "eslint-plugin-prettier": "^5.4.1",
      "eslint-plugin-vue": "^10.2.0",
      "prettier": "^3.5.3",
      "typescript": "^5.8.3"
    }
  }
}
