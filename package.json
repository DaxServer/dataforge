{
  "name": "dataforge",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"bun --cwd backend dev\" \"bun --cwd frontend dev\"",
    "format": "prettier --cache --log-level warn --ignore-unknown --write .",
    "lint": "bun -F '*' lint",
    "lint:backend": "bun -F backend lint",
    "lint:frontend": "bun -F frontend lint",
    "mcpi": "bunx @modelcontextprotocol/inspector",
    "tsc": "bun -F '*' typecheck",
    "typecheck": "bun -F '*' typecheck"
  },
  "workspaces": {
    "packages": [
      "frontend",
      "backend"
    ],
    "catalog": {
      "@elysiajs/cors": "1.4.0",
      "@elysiajs/eden": "1.4.0",
      "@elysiajs/openapi": "1.4.0",
      "@eslint/eslintrc": "^3.3.1",
      "@eslint/js": "^9.28.0",
      "@tsconfig/bun": "^1.0.0",
      "@types/bun": "1.2.21",
      "@types/node": "^24.0.0",
      "@typescript-eslint/eslint-plugin": "^8.43.0",
      "@typescript-eslint/parser": "^8.43.0",
      "bun-types": "1.2.21",
      "elysia": "1.4.4",
      "eslint": "^9.28.0",
      "eslint-config-prettier": "^10.1.8",
      "eslint-plugin-no-relative-import-paths": "^1.6.1",
      "eslint-plugin-prettier": "^5.5.4",
      "prettier": "^3.5.3",
      "zod": "^4.0.0",
      "typescript": "^5.9.0"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier-plugin-organize-imports": "^4.2.0"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild"
  ],
  "engines": {
    "bun": "^1.2.21"
  }
}
