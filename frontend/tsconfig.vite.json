{
  "extends": ["../tsconfig.base.json", "@tsconfig/node22/tsconfig.json"],
  "include": ["vite.config.*", "vitest.config.*", "src/**/*.ts", "src/**/*.vue", "*.d.ts", "../backend/src/**/*.ts", "env.d.ts",
    "interface-extensions.d.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
