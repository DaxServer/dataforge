{
  "extends": [
    "../tsconfig.base.json",
    "@tsconfig/node22/tsconfig.json"
  ],
  "include": [
    "*.config.*",
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "../backend/src/**/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
