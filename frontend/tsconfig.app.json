{
  "extends": ["../tsconfig.base.json", "@vue/tsconfig/tsconfig.dom.json"],
  "include": [
    "env.d.ts",
    "interface-extensions.d.ts",
    "components.d.ts",
    "auto-imports.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "../backend/src/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*", "vite.config.*", "vitest.config.*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": [
      "esnext",
      "dom"
    ]
  }
}
