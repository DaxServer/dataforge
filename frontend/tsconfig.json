{
  "extends": [
    "../tsconfig.base.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "env.d.ts",
    "interface-extensions.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "types": [
      "vite/client",
      "bun",
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["../backend/src/*"],
      "@frontend/*": ["../frontend/src/*"],
    }
  }
}
