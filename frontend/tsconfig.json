{
  "extends": ["../tsconfig.base.json", "@vue/tsconfig/tsconfig.dom.json"],
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "env.d.ts",
    "interface-extensions.d.ts",
    "src/**/*"
  ],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "types": ["vite/client", "bun", "node"],
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["./src/*"],
      "@backend/*": ["../backend/src/*"]
    }
  }
}
