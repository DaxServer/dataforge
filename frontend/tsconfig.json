{
  "extends": [
    "../tsconfig.base.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "exclude": [
    "vite.config.*",
    "vitest.config.*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@frontend": ["./src"],
      "@frontend/*": ["./src/*"],
      "@backend": ["../backend/src"],
      "@backend/*": ["../backend/src/*"],
      "@backend/tests/*": ["../backend/tests/*"]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  }
}
